{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "lib": ["dom", "dom.iterable", "es2015", "es2016", "es2017", "esnext"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
